  <!-- Gazebo -->
  <!-- <xacro:kinect_gazebo name="kinect_side"/> -->

  <!-- Add Leap Motion -->
  <!-- Link -->
  <link name="leap_motion_link"/>

  <!-- Joint -->
  <joint name="leap_motion_joint" type="fixed">
    <origin xyz="0.057 0 0.565" rpy="${M_PI/2} ${M_PI} 0"/>
    <parent link="world"/>
    <child link="leap_motion_link"/>
  </joint>

</robot>
